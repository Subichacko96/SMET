<div class="wrapper">
  <!-- Main Sidebar Container -->
  {{> cashiersidebar}}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Todays Orders</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Todays Orders</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="title" style="text-align: center;">Todays Orders Details</h3>
            </div>
            <!-- /.card-header -->
            <div class=" card-body" id="reload">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Table No</th>
                    <th>Customer Name</th>
                    <th>Mobile No</th>
                    <th>Total</th>
                    <th>View Order</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each odres}}
                  <!--example values start-->
                  <tr>
                    <td>{{this.table_no}}</td>
                    <td>{{this.customer_name}}</td>
                    <td>{{this.customer_mobNo}}</td>
                    <td>
                      â‚¹ {{this.total_bill}}
                    </td>
                    <td>

                      <a class="btn btn-primary px-4 m-2" href="vieworder/{{this._id}}" role="button">View Full
                        Details</a>

                    </td>
                  </tr>
                  {{/each}}

                </tbody>
                <tfoot>
                  <tr>
                    <th> Table No</th>
                    <th>Customer Name</th>
                    <th>Mobile No</th>
                    <th>Total</th>
                    <th>View Order</th>
                  </tr>
                  <!--example values-->
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  {{> footer}}


  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
{{> flash}}
<script>

  $(function () {
    $("#example1").DataTable()
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false,
    });
  })

  function reload() {
    setInterval(function () {
      $("#reload").load(" #reload");


    }, 1000);
  }

  //reload()
</script>
