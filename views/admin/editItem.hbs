<div class="wrapper">


  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  {{> sidebar}}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Add Food Item</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Edit Food Item</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <h2>{{user}}</h2>
    </section>
    <!-- general form elements disabled -->


    <section class="content">
      <div class="container-fluid ">
        <div class="rounded mb-3 bg-white">
          <div class="card card-primary">
            <div class="card-header">
              <h2 style="text-align:center">Edit Food Items</h2>
            </div>
          </div>
          <form action="" method="post">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group m-3">
                  <label for="nameInput">Name of the Food Item</label>
                  <input type="text" class="form-control" id="nameInput" aria-describedby="Enter the Food Item name"
                    value="{{foodName}}" placeholder="Enter the Food Item name" name="name" required>

                </div>
                <div class="form-group m-3">
                  <label for="nameInput">Price</label>
                  <input type="number" class="form-control" id="nameInput" aria-describedby="Remarks" value="{{price}}"
                    placeholder="Price" name="price" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group m-3">
                  <label for="nameInput">Category</label>
                  <select class="form-control form-control" name="category">
                    <option value="{{catId}}"> {{catName}}</option>

                    {{#each data}}
                    <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}

                  </select>
                </div>
                <div class="form-group m-3">
                  <label for="nameInput">Remarks</label>
                  <input type="text" class="form-control" id="nameInput" aria-describedby="Remarks" value="{{remark}}"
                    placeholder="Remarks" name="remarks">
                </div>
              </div>
            </div>

            <div class="row">

              <button type="submit" class="btn btn-primary col-12 col-lg-6 col-xl-3  mx-auto mb-3">Submit</button>
            </div>
          </form>
        </div>
      </div>
  </div>
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
{{> footer}}
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
  <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
