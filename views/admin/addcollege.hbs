                  <input type="number" class="form-control" id="nameInput" aria-describedby="Phone" placeholder="Phone"
                    name="Phone" required>
                </div>
                <div class="form-group mt-3">
                  <label for="nameInput">University</label>
                  <input type="text" class="form-control" id="nameInput" aria-describedby="University"
                    placeholder="University" name="University" required>
                </div>
                <div class="form-group mt-3">
                  <label for="nameInput">Website</label>
                  <input type="text" class="form-control" id="nameInput" aria-describedby="Website"
                    placeholder="Website" name="Website" required>
                </div>
                <div class="form-group mt-3">
                  <label for="nameInput">Remarks</label>
                  <input type="text" class="form-control" id="nameInput" aria-describedby="Website"
                    placeholder="Remarks" name="Remarks" required>
                </div>
              </div>

